<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".product_details.ProductDetailsFragment">

    <View
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle_left"
        android:backgroundTint="@color/purple_500"
        android:padding="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/checkout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:elevation="10dp"
        tools:listitem="@layout/checkout_item"
        app:layout_constraintTop_toBottomOf="@id/top_layer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/background_white">

        <TextView
            android:id="@+id/label_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/label_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/sub_total"
            app:layout_constraintBottom_toTopOf="@id/to_go_button"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm &amp; Pay"
            android:textAllCaps="false"
            android:paddingHorizontal="15dp"
            android:background = "@drawable/button_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/purple_500" />
        <Button
            android:id="@+id/to_go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO GO"
            android:textAllCaps="false"
            android:paddingHorizontal="25dp"
            android:layout_marginLeft="10dp"
            android:background = "@drawable/button_background"
            app:layout_constraintStart_toEndOf="@id/confirm_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/purple_500" />


        <TextView
            android:id="@+id/sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.20"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/sub_total"
            app:layout_constraintBottom_toTopOf="@id/to_go_button"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            app:layout_constraintEnd_toStartOf="@id/price"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/to_go_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tax" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>